---
export interface Props {
    img?: string;
    url?: string;
}

const {
    img = '/public/appsShowcase/FonicrisPC.png',
    url = 'https://example.com',
} = Astro.props;
--- 


<div class="w-177 h-[442.50px] rounded-2xl bg-[#7d7d7d] p-px overflow-hidden">

    <header style="border-radius: 15px 15px 0px 0px;" class="flex bg-[#E5E2E3] items-center py-2">

        <div class="flex justify-start px-4 gap-2 items-center">
            <span class="h-3 w-3 bg-[#FE5C5A] rounded-full hover:contrast-80"></span>
            <span class="h-3 w-3 bg-[#FEBB34] rounded-full hover:contrast-80"></span>
            <span class="h-3 w-3 bg-[#2EC53B] rounded-full hover:contrast-80"></span>

            <div class="flex ml-2 gap-2">
                <span class="h-5 w-5 bg-white flex justify-center items-center rounded-full hover:contrast-50">
                    <svg class="opacity-30" width="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M7.82843 10.9999H20V12.9999H7.82843L13.1924 18.3638L11.7782 19.778L4 11.9999L11.7782 4.22168L13.1924 5.63589L7.82843 10.9999Z">
                            </path>
                        </svg>
                </span>

                <span class="h-5 w-5 bg-white flex justify-center items-center rounded-full hover:contrast-50">
                    <svg class="opacity-30" width="16"  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z">
                        </path>
                    </svg>
                </span>
            </div>
        </div>

        <div class="flex items-center justify-between w-full bg-white rounded-full mr-8 px-2">
            <p style="font-family: Outfit;" class="opacity-40 text-[12px]">{url}
            </p>
            <i class="ri-search-line opacity-30"></i>
        </div>
    </header>
    
    <div class="relative w-full h-full bg-black overflow-hidden">
        <div>
            <img src={img} alt="">
        </div>
    </div>
</div>