---
import { date } from "astro:schema";

const apps = [
    {
        name: 'Fonicris',
        description: 'App para gestionar, añadir y verificar activos.',
        image: 'https://binamehta.com/wp-content/uploads/image-placeholder-300x200.png',
        link: 'https://appone.example.com',
        date: "2024-04-15",
        github: false,
        githubLink: "url",
        page: false
    },
    {
        name: 'App Two',
        description: 'This is the second app.',
        image: 'https://binamehta.com/wp-content/uploads/image-placeholder-300x200.png',
        link: 'https://apptwo.example.com',
        date: "2024-05-02",
        github: false,
        githubLink: "url",
        page: true
    },
    {
        name: 'Appo 4',
        description: 'This is the third app.',
        image: 'https://binamehta.com/wp-content/uploads/image-placeholder-300x200.png',
        link: 'https://appthree.example.com',
        date: "2024-04-15",
        github: true,
        githubLink: "url",
        page: false
    },
];
---

<section id="#AppMobiles" class="py-8">
    <!-- Encabezado de sección -->
    <div class="px-6 py-4 mx-8 lg:mx-20 rounded-xl bg-linear-to-r from-[#1e1e1e] to-[#2d2d2d] shadow-lg" style="font-family: 'Montserrat', sans-serif;">
        <div class="flex items-center gap-3">
            <div class="p-2 bg-[#FF451A] rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-white">Apps Móviles</h2>
                <p class="text-gray-300 text-sm mt-1">Descubre nuestras aplicaciones disponibles</p>
            </div>
        </div>
    </div>

    <!-- Grid de cards -->
    <div class="flex flex-wrap justify-center gap-8 p-8 md:p-20">
        {apps.map(app => (
            <div class="group relative bg-white flex flex-col rounded-2xl shadow-xl hover:shadow-2xl min-w-75 max-w-87.5 overflow-hidden
                        hover:-translate-y-2 transition-all duration-300 ease-out
                        border border-gray-100">
                
                <!-- Badge de fecha -->
                <div class="absolute top-4 right-4 z-10">
                    <span class="px-3 py-1 bg-[#FF451A] text-white text-xs font-semibold rounded-full shadow">
                        {new Date(app.date).toLocaleDateString('es-ES', { 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                        })}
                    </span>
                </div>
                
                <!-- Indicador de estado -->
                <div hidden class="absolute top-4 left-4 z-10">
                    {app.page ? (
                        <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-full shadow flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            Disponible
                        </span>
                    ) : (
                        <span class="px-3 py-1 bg-gray-400 text-white text-xs font-semibold rounded-full shadow flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                            Próximamente
                        </span>
                    )}
                </div>
                
                <!-- Contenedor de imagen -->
                <div class="relative overflow-hidden h-48">
                    <img 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
                        src={app.image} 
                        alt={app.name}
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                </div>

                <!-- Contenido de la card -->
                <div class="flex flex-col grow p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-2">{app.name}</h2>
                    <p class="text-gray-600 mb-6 grow line-clamp-3">{app.description}</p>
                    
                    <!-- Botones de acción -->
                    <div class="mt-auto flex flex-col gap-3">
                        {/* Botón de GitHub (solo si github es true) */}
                        {app.github && app.githubLink && (
                            <a 
                                href={app.githubLink} 
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center justify-center gap-2 w-full px-4 py-3 bg-gray-800 text-white font-medium rounded-lg
                                       hover:bg-gray-900 transition-all duration-200
                                       shadow hover:shadow-md"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                                Repositorio
                            </a>
                        )}
                        
                        {/* Botón de Ver Aplicación (solo si page es true) */}
                        {app.page ? (
                            <a 
                                href={app.link} 
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center justify-center gap-2 w-full px-4 py-3 bg-linear-to-r from-[#FF451A] to-[#FF451A] text-white font-medium rounded-lg
                                       hover:from-[#FF451A] hover:to-[#B33012] transition-all duration-200
                                       shadow hover:shadow-md">
                                
                                Ver Aplicación
                            </a>
                        ) : (
                            <button 
                                disabled
                                class="inline-flex items-center justify-center gap-2 w-full px-4 py-3 bg-gray-200 text-gray-500 font-medium rounded-lg
                                    cursor-not-allowed opacity-70">
        
                                No Disponible   
                            </button>
                        )}
                    </div>
                </div>

                <!-- Efecto hover -->
                <div hidden class="absolute inset-0 rounded-2xl border-2 border-transparent group-hover:border-blue-400/30 transition-all duration-300 pointer-events-none"></div>
            </div>
        ))}
    </div>
</section>

