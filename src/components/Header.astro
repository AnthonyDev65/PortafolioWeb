---
const {url} = Astro;
const path = url.pathname;
---

<header class="main-header">
    <div class="mastil">
        <h1><i class="ri-terminal-box-fill"></i>AnthoniDev</h1>
    </div>

    <nav class="header-nav">
        <ul>
            <li><a href="/" class={path === "/" ? "active" : "" }>Inicio</a></li>
            <li><a href="/projects" class={path === "/projects" ? "active" : "" }>Projectos</a></li>
            <li><a href="/">Recursos</a></li>
            <li><a href="/">Sobre mi</a></li>
        </ul>
    </nav>

    <div class="header-buttons">
        <button class="menu-btn"><i class="ri-menu-2-line"></i></button>

        <a href="https://github.com/AnthonyDev65" target="_blank">
            <button><i class="ri-github-fill"></i></button>
        </a>

        <a href="https://www.linkedin.com/in/anthoni-castillo-moncion-907a903a1/" target="_blank">
            <button><i class="ri-linkedin-box-fill"></i></button>
        </a>
    </div>

</header>

<style>

    :root {
    --p-text-color: #212121;
    --s-text-color: #a1a1a1;
    --c-text-color: #FF451A;
    --b-text-color: #929191;
    --font: Montserrat;
    --bg: #FFFFFF;
    }

    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        background-color: var(--bg);

    }

    .main-header{
        display: flex;
        align-items: center;
        padding: 20px 40px;
        justify-content: space-between;

        position: sticky;
        top: 0;
        
        z-index: 100;
        background-color: var(--bg);
        width: 100%;
        box-sizing: border-box;
        backdrop-filter: blur(10px);
    }

    .mastil h1{
        font-family: var(--font);
        color: var(--p-text-color);
        font-size: 22px;
        font-weight: 500;   
        user-select: none;
        backdrop-filter: ;
    }

    .ri-terminal-box-fill {
        color: var(--c-text-color);
        margin-right: 4px;    
    }

    .header-nav{
        display: flex;
        margin-right: auto;
        margin-left: 100px;
    }

    .header-nav ul{
        display: flex;
        list-style: none;
        gap: 30px;
        font-family: var(--font);
    }

    .header-nav ul li a {
        text-decoration: none;
        color: var(--b-text-color);
        transition: all .2s ease;
    }

    .header-nav ul li a.active{
        color: var(--c-text-color);
        font-weight: bold;
    }

    

    .header-nav ul li a:hover {        
        color: var(--p-text-color);
    }









    .header-buttons {
        display: flex;
        gap: 15px;
        justify-content: end;
    }

    .header-buttons button {
        background-color: transparent;
        border: 0px;
        transition: all .2s ease;
    }

    .header-buttons button:hover {
        opacity: .7;

    }

    .header-buttons i {
        color: var(--c-text-color);
        font-size: 26px;
    }

    .menu-btn { 
            display: none;
    }



    @media (max-width: 600px) { /* Para pantallas con un ancho máximo de 600px (móviles) */
        .main-header {
            padding: 15px 20px;
        }

        .header-nav {
            display: none;
        }
        .menu-btn {
            display: none;
        }
    }



</style>


