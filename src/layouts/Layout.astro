---
import '../styles/global.css';
import Resource from '../styles/globalComponents.astro'
import Header from '../components/Version 2/header.astro'

import Mac from '../components/Version 2/UI/MacCover.astro'

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Primary Meta Tags -->
		<title>Anthoni Castillo | Portfolio</title>
		<meta name="title" content="Anthoni Castillo | Portafolio de proyectos en desarrollo de software" />
		<meta name="description" content="Welcome to my portfolio. I am Anthoni Castillo, a web developer with over three years of experience in designing, developing, and maintaining front-end web applications." />
		<meta name='keywords' content='AnthoniDev, Anthoni Castillo, Software Developer, Web Developer, Front-end Developer, React, Next.js, Angular, TypeScript, JavaScript, Vite, TailwindCSS, UX/UI' />	
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://anthonidev.vercel.app/" />
		<meta property="og:title" content="Anthoni Castillo | Portfolio" />
		<meta property='og:site_name' content='Anthoni Castillo | Portfolio' />
		<meta property="og:description" content="Welcome to my portfolio. I am Anthoni Castillo, a web developer with over three years of experience in designing, developing, and maintaining front-end web applications." />
		<meta property="og:image" content="" />
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://anthonidev.vercel.app/" />
		<meta property="twitter:title" content="Anthoni Castillo | Portfolio" />
		<meta property="twitter:description" content="Welcome to my portfolio. I am Anthoni Castillo, a web developer with over three years of experience in designing, developing, and maintaining front-end web applications." />
		
		<Resource/>

	</head>
	<body class="LL">
		<div class="w-full bg-moonlit select-none text-midnight flex flex-col items-center subpixel-antialiased dark:bg-dusky dark:text-noon scroll-smooth gap-5 lg:gap-10 mb-10">

		
			<Header />
			<main class="w-full flex flex-col gap-10 items-center max-x-5xl px-5 xl:max-w-6xl">
				<slot />
			</main>

		</div>
	</body>
</html>

